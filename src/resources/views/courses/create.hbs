<h1 class="text-center mt-3 text-success">Thêm video mới</h1>
<form method="POST" action="/courses/store">
  <div class="form-group">
    <label for="name">Tiêu đề </label>
    <input type="text" class="form-control" id="name" name="name" />
  </div>
  <div class="form-group">
    <label for="decription">Mô tả video</label>
    <input type="text" class="form-control" id="decription" name="decription" />
  </div>
  <div class="form-group"> 
    <label for="videoId">Video ID</label>
    <input type="text" class="form-control" id="videoId" name="videoId" />
  </div>
  <div class="d-flex justify-content-center">
    <button type="submit" class="mt-3 btn btn-success w-50">Thêm</button>
  </div>
</form>